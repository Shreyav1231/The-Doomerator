{
    "manifest_version": 3,
    "name": "Doominator",
    "version": "1.0",
    "description": "extension to help you manage doomscrolling on web applications",
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": "images/app-logo.png"
    },
    "permissions": [
      "activeTab",
      "tabs",
      "storage",
      "declarativeContent"
    ],
    "background": {
        "service_worker" : "scripts/background.js"

    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["scripts/content.js"]
      }
    ]
  }
  